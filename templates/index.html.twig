{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <style>
        /* Style pour le message de bienvenue */
        .welcome-section {
            text-align: center;
            background-color: #f8f9fa; /* Gris clair */
            color: #333; /* Texte sombre */
            padding: 30px 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .welcome-section h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 0;
        }
        .welcome-section p {
            font-size: 1.2rem;
            margin: 10px 0 0 0;
        }
        .welcome-section p span {
            font-weight: bold;
            color: #6c757d; /* Gris foncé pour le nom */
        }
        /* Style général des titres */
        .section-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }
        /* Conteneur défilable pour les produits */
        .products-scroll {
            display: flex;
            gap: 20px;
            overflow-x: auto;
            padding: 10px 0;
            scrollbar-width: thin;
            scrollbar-color: #6c757d #f8f9fa;
        }
        .products-scroll::-webkit-scrollbar {
            height: 8px;
        }
        .products-scroll::-webkit-scrollbar-thumb {
            background-color: #6c757d;
            border-radius: 8px;
        }
        .products-scroll::-webkit-scrollbar-track {
            background-color: #f8f9fa;
        }
        /* Cartes produits */
        .product-card {
            flex: 0 0 auto;
            width: 200px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }
        .product-card:hover {
            transform: scale(1.05);
        }
        .product-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }
        .product-card h3 {
            font-size: 1rem;
            margin: 10px;
        }
        .product-card a {
            text-decoration: none;
            color: inherit;
        }
        .product-card a:hover {
            color: #007BFF;
        }
    </style>

    <!-- Section de bienvenue -->
    <div class="welcome-section">
        <h1>Bienvenue</h1>
        {% if app.user %}
            <p>Bonjour, <span>{{ app.user.name }} {{ app.user.lastname }}</span> !</p>
        {% else %}
            <p>Créer un compte et rejoignez-nous !</p>
        {% endif %}
    </div>

    <!-- Section des produits les mieux notés -->
    <div>
        <h2 class="section-title">Produits les mieux notés</h2>
        <div class="products-scroll">
            {% for product in bestRatedProducts %}
                {% if product.categoryId is defined %}
                    <a href="{{ path('product_detail', { id: product.id, category: product.categoryId }) }}" class="product-card">
                {% else %}
                    <a href="{{ path('product_detail', { id: product.id }) }}" class="product-card">
                {% endif %}
                    {% if product.image %}
                        <img src="{{ product.image }}" alt="{{ product.name }}">
                    {% else %}
                        <img src="/path/to/default-image.jpg" alt="Image par défaut">
                    {% endif %}
                    <h3>{{ product.name }}</h3>
                    <p>{{ product.description }}</p>
                    <strong>Note moyenne : {{ product.avgRating|number_format(1) }}</strong>
                </a>
            {% else %}
                <p>Aucun produit trouvé.</p>
            {% endfor %}
        </div>
    </div>

    <!-- Section des produits pas chers -->
    <div class="mt-5">
        <h2 class="section-title">Produits pas chers</h2>
        <div class="products-scroll">
            {% for product in discountedProducts %}
                {% if product.categoryId is defined %}
                    <a href="{{ path('product_detail', { id: product.id, category: product.categoryId }) }}" class="product-card">
                {% else %}
                    <a href="{{ path('product_detail', { id: product.id }) }}" class="product-card">
                {% endif %}
                    {% if product.image %}
                        <img src="{{ product.image }}" alt="{{ product.name }}">
                    {% else %}
                        <img src="/path/to/default-image.jpg" alt="Image par défaut">
                    {% endif %}
                    <h3>{{ product.name }}</h3>
                    <p>{{ product.description }}</p>
                    <strong>Prix : {{ product.price }} €</strong>
                </a>
            {% else %}
                <p>Aucun produit pas cher actuellement.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
