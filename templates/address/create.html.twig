{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle adresse{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-2xl font-bold mb-4">Créer une nouvelle adresse</h1>

        {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_widget(form) }}
            <button type="submit" class="bg-blue-500 text-white rounded-lg px-4 py-2 hover:bg-blue-600">
                Ajouter l'adresse
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
