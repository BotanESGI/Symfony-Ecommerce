{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Nos produits</h1>
    <p class="text-gray-700 mb-6">Nos produits : </p>

    <form method="GET" action="{{ path('product_page') }}" class="mb-4">
        <input type="text" name="search" placeholder="Rechercher un produit..." class="border rounded px-4 py-2 mr-2">
        <button type="submit" class="bg-blue-500 text-white rounded px-4 py-2">Rechercher</button>
    </form>

    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for product in products %}
            <li class="bg-white shadow rounded-lg overflow-hidden transform transition-transform duration-300 hover:scale-105"> <!-- Ajout d'effets de transformation -->
                <a href="{{ path('product_detail', { id: product.id }) }}" class="block hover:shadow-lg" title="Cliquer ici pour en savoir plus sur l'article">
                    <img src="{{ product.image }}" alt="Image de {{ product.name }}" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold text-gray-900">#{{ loop.index }} - {{ product.name }}</h2>
                        <p class="text-gray-600 mt-2">{{ product.description }}</p>
                        <p class="text-gray-800 font-bold mt-2">Prix: {{ product.price | number_format(2, ',', ' ') }} â‚¬</p> <!-- Affichage du prix -->
                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
