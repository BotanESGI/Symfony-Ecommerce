{% extends 'admin/admin.html.twig' %}

{% block title %}Admin - Backoffice ({{ tag is defined ? 'Modifier' : 'Créer' }} un tag){% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6">{{ tag is defined ? 'Modifier' : 'Créer' }} un tag</h1>

    <form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        {{ form_start(form) }}

        <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
            {{ form_widget(form.name, {'attr': {'class': 'form-input mt-1 block w-full rounded border-gray-300'}}) }}
            {% if form.name.vars.errors|length > 0 %}
                <div class="text-red-500">
                    {{ form_errors(form.name) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-4">
            <label for="color" class="block text-sm font-medium text-gray-700">Couleur</label>
            {{ form_widget(form.color, {'attr': {'class': 'form-input mt-1 block w-full rounded border-gray-300'}}) }}
            {% if form.color.vars.errors|length > 0 %}
                <div class="text-red-500">
                    {{ form_errors(form.color) }}
                </div>
            {% endif %}
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">Enregistrer</button>

        {{ form_end(form) }}
    </form>

    <a href="{{ path('admin_tags') }}" class="text-blue-600 mt-4 inline-block">Retourner à la liste des tags</a>
{% endblock %}
