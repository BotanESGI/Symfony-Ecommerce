{% extends 'admin/admin.html.twig' %}

{% block title %}Admin - Backoffice (Modification de l'avis) {% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6">Modifier l'avis</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

    <div class="mb-4">
        <label for="user" class="block text-sm font-medium text-gray-700">Utilisateur</label>
        {{ form_widget(form.user, {'attr': {'class': 'form-select mt-1 block w-full rounded border-gray-300'}}) }}
        {% if form.user.vars.errors|length > 0 %}
            <div class="text-red-500">
                {{ form_errors(form.user) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-4">
        <label for="product" class="block text-sm font-medium text-gray-700">Produit</label>
        {{ form_widget(form.product, {'attr': {'class': 'form-select mt-1 block w-full rounded border-gray-300'}}) }}
        {% if form.product.vars.errors|length > 0 %}
            <div class="text-red-500">
                {{ form_errors(form.product) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-4">
        <label for="content" class="block text-sm font-medium text-gray-700">Contenu</label>
        {{ form_widget(form.content, {'attr': {'class': 'form-input mt-1 block w-full rounded border-gray-300'}}) }}
        {% if form.content.vars.errors|length > 0 %}
            <div class="text-red-500">
                {{ form_errors(form.content) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-4">
        <label for="rating" class="block text-sm font-medium text-gray-700">Note</label>
        {{ form_widget(form.rating, {'attr': {'class': 'form-input mt-1 block w-full rounded border-gray-300'}}) }}
        {% if form.rating.vars.errors|length > 0 %}
            <div class="text-red-500">
                {{ form_errors(form.rating) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700">Statut</label>
        <div class="flex space-x-4 mt-1">
            {% for status in form.status %}
                <div class="flex items-center">
                    {{ form_widget(status, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500'}}) }}
                    <label for="{{ status.vars.id }}" class="ml-2 block text-sm text-gray-700 cursor-pointer">{{ status.vars.label }}</label>
                </div>
            {% endfor %}
        </div>
        {% if form.status.vars.errors|length > 0 %}
            <div class="text-red-500">
                {{ form_errors(form.status) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-4">
        <label for="datePublication" class="block text-sm font-medium text-gray-700">Date de publication</label>
        {{ form_widget(form.datePublication, {'attr': {'class': 'form-input mt-1 block w-full rounded border-gray-300'}}) }}
        {% if form.datePublication.vars.errors|length > 0 %}
            <div class="text-red-500">
                {{ form_errors(form.datePublication) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-4">
        {{ form_widget(form.save, {'attr': {'class': 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition'}}) }}
    </div>

    {{ form_end(form) }}
{% endblock %}
