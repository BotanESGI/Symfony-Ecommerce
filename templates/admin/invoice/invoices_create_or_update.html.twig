{% extends 'admin/admin.html.twig' %}

{% block title %}Admin - {{ invoice is not null ? 'Modifier' : 'Créer' }} une facture{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6 border-b pb-3">{{ invoice is not null ? 'Modifier' : 'Créer' }} une facture</h1>

    <form method="post" class="bg-white shadow-md rounded border border-gray-300 px-8 pt-6 pb-8 mb-4">
        {{ form_start(form) }}

        <div class="mb-4">
            <label for="user" class="block text-sm font-medium text-gray-700">Utilisateur</label>
            {{ form_widget(form.user, {'attr': {'class': 'form-input mt-1 block w-full rounded border border-gray-300 p-2'}}) }}
            {% if form.user.vars.errors|length > 0 %}
                <div class="text-red-500 text-sm mt-1">
                    {{ form_errors(form.user) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-4">
            <label for="totalAmount" class="block text-sm font-medium text-gray-700">Montant Total</label>
            {{ form_widget(form.totalAmount, {'attr': {'class': 'form-input mt-1 block w-full rounded border border-gray-300 p-2'}}) }}
            {% if form.totalAmount.vars.errors|length > 0 %}
                <div class="text-red-500 text-sm mt-1">
                    {{ form_errors(form.totalAmount) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-4">
            <label for="order" class="block text-sm font-medium text-gray-700">Commande</label>
            {{ form_widget(form.order, {'attr': {'class': 'form-input mt-1 block w-full rounded border border-gray-300 p-2'}}) }}
            {% if form.order.vars.errors|length > 0 %}
                <div class="text-red-500 text-sm mt-1">
                    {{ form_errors(form.order) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-4">
            <label for="pdfPath" class="block text-sm font-medium text-gray-700">Chemin du fichier PDF</label>
            {{ form_widget(form.pdfPath, {'attr': {'class': 'form-input mt-1 block w-full rounded border border-gray-300 p-2'}}) }}
            {% if form.pdfPath.vars.errors|length > 0 %}
                <div class="text-red-500 text-sm mt-1">
                    {{ form_errors(form.pdfPath) }}
                </div>
            {% endif %}
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded border border-blue-600 hover:bg-blue-600 transition">
            Enregistrer
        </button>

        {{ form_end(form) }}
    </form>

    <a href="{{ path('admin_invoices') }}" class="text-blue-600 mt-4 inline-block border-b border-blue-400 pb-1 hover:text-blue-800 transition">
        Retourner à la liste des factures
    </a>
{% endblock %}
